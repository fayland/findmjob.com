<div class="row pull-right">

[% IF is_fb_app %]
<div class="fb-like" data-href="[% config.sites.main %][% base_url %]" data-send="true" data-layout="button_count" data-width="200" data-show-faces="true"></div>
[% ELSE %]
<!-- AddThis Button BEGIN -->
<div class="addthis_toolbox addthis_default_style ">
<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
<a class="addthis_button_tweet"></a>
<a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
<a class="addthis_counter addthis_pill_style"></a>
</div>
<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4f7818b37cce11fd"></script>
<!-- AddThis Button END -->
[% END %]

</div>