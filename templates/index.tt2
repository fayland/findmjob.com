[% title = 'Recent Jobs' %]

[% USE String %]

<h1>[% title %]</h1>
<hr class="soften">

[% FOREACH job IN jobs %]
[% IF loop.count MOD 2 == 1 %]<div class="row">[% END %]
    <div class="span6">
        <div class="well">
        <h3>[% job.title %]</h3>
        <p>[% job.description %]</p>
        <p class="pull-right"><a href='/job/[% job.id %]'>View More</a></p>
        </div>
    </div>
[% IF loop.count MOD 2 == 0 %]</div>[% END %]
[% END %]
